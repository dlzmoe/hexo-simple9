<!DOCTYPE html>
<%- partial('partials/head') %>

	<body>
		<header>
			<!-- cover image or sth. -->
		</header>
		<div id="main" class="m-scene">
			<%- partial('partials/nav') %>
				<div class="container content">
					<div class="scene_element scene_element--fadein">
						<%- body %>
					</div>
				</div>

				<!-- 返回顶部按钮 -->
				<div class="right-icon">
